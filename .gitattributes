# Handle line endings automatically for files detected as text
# and leave all files detected as binary untouched.
* text=auto

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# Gradle
*.gradle text eol=lf
gradlew text eol=lf
gradle-wrapper.properties text eol=lf

# Kotlin/Java
*.kt text eol=lf
*.java text eol=lf

# XML
*.xml text eol=lf

# Markdown
*.md text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
.editorconfig text eol=lf
.eslintrc.js text eol=lf
.prettierrc text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.jar binary
*.war binary
*.keystore binary
*.apk binary

